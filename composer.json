{
	"name": "akirk/wp-public-data-analyzer",
	"description": "Scripts for analyzing WordPress public data",
	"type": "project",
	"require": {
		"php": ">=7.4",
		"phpoffice/phpspreadsheet": "^1.29"
	},
	"scripts": {
		"update-data": "php update-data.php",
		"analyze:plugins-with-blueprints": "php analyze-plugins-with-blueprints.php",
		"analyze:plugins-without-blueprints": "php analyze-plugins-without-blueprints.php",
		"analyze:plugins-top-100": "php analyze-plugins-top-100.php",
		"analyze:all": [
			"@analyze:plugins-with-blueprints",
			"@analyze:plugins-without-blueprints",
			"@analyze:plugins-top-100"
		],
		"generate:html": "php generate-html-tables.php",
		"generate:coordination": "php generate-coordination.php",
		"build": [
			"@analyze:all",
			"@generate:html"
		]
	}
}